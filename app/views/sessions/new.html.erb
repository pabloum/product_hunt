<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3">
      <h1>Sign in</h1>
      <%= form_tag controller: :sessions, action: :create do %>
      <!-- form_tag when I don't want to link this to a model. form_for does link it. -->
        <div class="form-group">
          <%= label_tag(:email, "Email") %>
          <%= email_field_tag(:email, nil, class: 'form-control input-lg', placeholder:"Enter your email") %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password") %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg', placeholder: "Password here") %>
        </div>
        <div class="text-right"><%= submit_tag("Enter", class: 'btn btn-warning btn-lg btn-block') %></div>
      <% end %>
    </div>
  </div>
</div>
