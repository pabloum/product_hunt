<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3">
      <h1><%= form_title %></h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Enter the product's name" %>
        </div>
        <div class="form-group">
          <%= f.url_field :url, class: "form-control input-lg", placeholder: "Enter the product's url" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Enter the product's description" %>
        </div>
        <div class="">
          <%= f.submit form_title, class: "btn btn-warning btn-lg btn-block"%>
          <%=%>
        </div>
      <% end %>
    </div>
  </div>
</div>
