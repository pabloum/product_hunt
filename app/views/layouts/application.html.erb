<!DOCTYPE html>
<html>
  <head>
    <title>ProductHunt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="alert alert-warning">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if signed_in? %>
      <div class="text-right">
        Hi, <%= current_user.name %>! <%= link_to "Log out", logout_path, class: "btn btn-outline-warning", method: :delete %>
      </div>
    <% else %>
      <div class="text-right">
        <%= link_to "Log in", login_path, class: "btn btn-outline-warning"%>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
